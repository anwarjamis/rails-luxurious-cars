<!DOCTYPE html>
<html>
  <head>
    <title>RailsLuxuriousCars</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <script src="https://kit.fontawesome.com/91e985734f.js" crossorigin="anonymous"></script>
  </head>

  <body>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "steering-wheel.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Add car", new_car_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "empty-avatar.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Hi #{current_user.username}!", "#", class: "dropdown-item" %>
              <%= link_to "My cars", mycars_path, class: "dropdown-item" %>
              <%= link_to "My reservations", cars_reservations_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign-up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
    <!--
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p> %> -->
    <%= render 'shared/flashes' %>
    <%= yield %>

</div>
<div class="footer" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/rp-gt4-6-1560804940.jpg?resize=980:*;)">
  <div>
  <h1>Explore</h1>
  <ul class="footer_ul">
    <li><%= link_to "Book a car", cars_path, class: "footer_ul" %></li>
    <li><%= link_to "List your car", new_car_path, class: "footer_ul" %></li>
   </ul>
   </div>

</div>

</div>


</div>
  </body>
</html>
