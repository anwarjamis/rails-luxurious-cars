<h1>All reservations</h1>
<ul>
  <% @reservations.each do |reservation|%>
  <li><%= Car.find(reservation.cars_id).brand %> <%= Car.find(reservation.cars_id).model %> reserved</li>
  <p><%= "From #{reservation.start_date.strftime("%F")} to #{reservation.end_date.strftime("%F")}" %></p>
  <p>payed: $<%= reservation.amount %></p>
  <%= link_to "Edit this reservation", edit_car_reservation_path(@car, reservation) %><br>
  <%= link_to "Remove reservation",
                  car_reservation_path(reservation),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
  <br><br>
  <% end %>
</ul>
<br>
