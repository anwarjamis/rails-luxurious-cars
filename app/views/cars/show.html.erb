<h1><%= @car.brand%> - <%=@car.model%></h1>
<h4>Model <%= @car.year %></h4>
<h4>Category: <%= @car.category %></h4>
<p><%= @car.description %></p>
<h5>City: <%= @car.city %></h5>
<%= link_to "Back to index", cars_path %><br>
<%= link_to "Edit this car", edit_car_path(@car) %><br>
<%= link_to "Book this car", new_car_reservation_path(@car) %>
<br>
<!-- aca esta el mapa, para q hagan su magia-->
<div style="width: 50%; height: 300px;"
  data-controller="mapbox"
  data-mapbox-marker-value="<%= @marker.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
