<div class="show-info">
<% if @car.photo.attached? %>
  <%= cl_image_tag @car.photo.key, crop: :fill %>
<% end %>
  <div class="container">
    <br>
      <div class="show-info-car">
        <div>
          <h1><%= @car.brand%> - <%=@car.model%></h1>
          <h2>Model: <%= @car.year %></h2>
          <h2>Category: <%= @car.category %></h2>
          <h2>City: <%= @car.city %></h2>
        </div>
        <div>
          <h3>price: $<%= @car.price %>/day</h3>
        </div>
        <div class="show-info-index">
          <ul>
            <%= link_to "Back to index", cars_path, class: "link_to"%> <br>
            <% if policy(@car).edit? %>
              <%= link_to "Edit car", edit_car_path(@car), class: "link_to" %><br>
              <%= link_to "Delete car",
                            car_path(@car),
                            class: "link_to",
                            method: :delete,
                            data: { confirm: "Are you sure?" } %>
            <% end %>
            <% if !policy(@car).edit? %>
              <%= link_to "Book this car", new_car_reservation_path(@car), class: "link_to" %><br>
            <% end %>
          </ul>
        </div>
      </div>
      <h4>Description: <p><%= @car.description %></p></h4>
      <div class="map" style="width: 50%; height: 300px;"
      data-controller="mapbox"
      data-mapbox-marker-value="<%= @marker.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      <br>
  </div>
</div>
