<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dxneryfww/image/upload/v1652207367/development/ds3xunfqfrdi2sjekaov.jpg);">
  <div class="container">
    <h1>It's time to ride the car of your dreams</h1>
    <p><em>Rent a luxury car and feel the wind in your face</em></p>
    <br>
    <%= form_tag cars_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control form-control-search",
      placeholder: "Find a car"%>
    <%= submit_tag "Search", class: "btn btn-primary btn-primary-search" %>
    <% end %>
  </div>
</div>

<br>
<div class="container">
  <h1>Our cars</h1>
  <div class="cards">
    <% @cars.each do |car|%>
    <div class="card-category" style="background-image: url(<%= cl_image_path car.photo.key %>)">
      <%= link_to "#{car.brand} #{car.model}", car_path(car), class: "text-white" %>
    </div>
    <% end %>
  </div>
</div>
<br>
<div style="width: 100%; height: 300px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
